<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalList.PersonalList_NewCocktailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/new_cocktail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <EditText
            android:id="@+id/new_cocktail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Type your cocktail's name here..."
            android:padding="10dp" />

        <EditText
            android:id="@+id/new_cocktail_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="category: Whisky,Rhum,Gin,Vodka,etc"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:alpha=".3"/>

        <EditText
            android:id="@+id/new_cocktail_ingredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="top"
            android:hint="Type your ingredients: \n -First ingredient \n -Second ingredient \n -..."
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_createCocktail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create this cocktail!" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>